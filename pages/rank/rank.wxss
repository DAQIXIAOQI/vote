
.gray-content {
  padding-top: 0;
  min-height: 100vh;
}
.my-rank {
  position: absolute;
  top: 130rpx;
  right: 17vw;
  background-color: rgb(52,53,66);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  color:rgb(214,185,147);
  box-shadow: 0 0 10rpx rgb(214,185,147);
}
.rank-list {
  margin-top: -60rpx;
  position: relative;
  
}
.item {
  border-bottom:1px solid #e0e0e0;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ffffff;
  font-size: 30rpx;
}
.item:first-child {
  border-width:0;
}
.item {
  text-align: center;
  overflow: hidden;
}
.item.rank-menu {
  height: 60rpx;
  line-height: 60rpx;
   background-color: transparent;
}
.item.rank-menu view{
  line-height: 60rpx;
}
.item view {
  width: 20%;
  float: left;
  line-height: 100rpx;
}
.item .item-rank image {
  width: 80rpx;
  height: 80rpx;
  margin-top:10rpx;
}
.item .item-rank text{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border:1px solid #ef3b4f;
  margin: 30rpx 0;
  line-height: 40rpx;
  border-radius: 999rpx;
}
.item .item-img image {
  width: 120rpx;
  height: 80rpx;
  margin: 10rpx 0;
  border-radius: 5rpx;
}

